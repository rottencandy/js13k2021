attribute vec2 aPos;

precision mediump float;

uniform vec3 uLightPos;
uniform float uTime;
uniform float uAspect;

varying vec2 vFragPos;
varying vec2 vScale;

export void vertex() {
  vScale = vec2(1., uAspect);
  gl_Position = vec4(aPos, 1., 1.);
  vFragPos = aPos;
}

export void colorFragment() {
  float circleSDF = length(abs(vFragPos * vScale));
  gl_FragColor = vec4(circleSDF);
}

