precision mediump float;
attribute vec4 aVertexPos;
uniform mat4 uMatrix;

varying vec4 vPos;

export void vertex() {
  gl_Position = uMatrix * aVertexPos;
  vPos = aVertexPos;
}

export void colorFragment() {
  vec4 decimal = step(0.01, fract(vPos));
  vec3 color = vec3(1.0 - min(decimal.x, decimal.z));
  color *= vec3(0.9, 0.4, 0.2);
  gl_FragColor = vec4(color, 0.6);
}
