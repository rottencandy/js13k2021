{
  "name": "js13k2021",
  "version": "0.0.1",
  "main": "index.js",
  "author": "Mohammed Saud <md.saud020@gmail.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "mkdir -p app && cp assets/* app",
    "build": "esbuild --bundle --minify --charset=utf8 --outdir=app --target=es6 --format=iife src/main.js src/app.css",
    "uglify": "uglifyjs --compress --mangle -o app/main.js -- app/main.js",
    "predev": "mkdir -p app && cp assets/* app",
    "dev": "esbuild --bundle --watch --charset=utf8 --outdir=app --target=es6 --format=iife src/main.js src/app.css",
    "bundle": "./bundle.sh"
  },
  "dependencies": {
    "esbuild": "^0.12.19",
    "uglify-js": "^3.14.1"
  }
}
